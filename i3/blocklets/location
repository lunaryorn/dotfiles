import sys
import logging
from systemd.journal import JournalHandler
from gi.repository import GLib, Gio

LOG = logging.getLogger('i3blocks.blocklets.location')


def print_indicator(geoclue):
    if geoclue.get_cached_property('InUse').unpack():
        sys.stdout.write('üìç\n')
    else:
        sys.stdout.write(' \n')

    sys.stdout.flush()


def geoclue_properties_changed(geoclue, changed_props, _invalidated_props):
    try:
        changed_props = changed_props.unpack()
        if 'InUse' in changed_props:
            print_indicator(geoclue)
    except Exception as error:
        LOG.exception(f'Failed to print location indicator: {error}')


def main():
    logging.getLogger().addHandler(JournalHandler())
    LOG.setLevel(logging.INFO)

    geoclue = Gio.DBusProxy.new_for_bus_sync(
        Gio.BusType.SYSTEM, Gio.DBusProxyFlags.NONE, None,
        'org.freedesktop.GeoClue2',
        '/org/freedesktop/GeoClue2/Manager',
        'org.freedesktop.GeoClue2.Manager'
    )
    geoclue.connect('g-properties-changed', geoclue_properties_changed)

    GLib.timeout_add(0, lambda: print_indicator(geoclue))
    GLib.MainLoop().run()

    try:
        pass
    except Exception as error:
        LOG.exception(f'Failed to connect to geoclue: {error}')
        sys.exit(1)


if __name__ == "__main__":
    try:
        main()
    except KeyboardInterrupt:
        pass
