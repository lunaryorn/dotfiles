import json
import html
from argparse import ArgumentParser
from subprocess import run


def is_focused(workspace):
    return workspace['focused']


def main():
    parser = ArgumentParser()
    parser.add_argument('name')

    args = parser.parse_args()

    workspaces = json.loads(run(['i3-msg', '-t', 'get_workspaces'],
                                capture_output=True, check=True).stdout.decode('utf-8'))
    focused = next(w for w in workspaces if is_focused(w))
    new_name = '{0}: {1}'.format(focused['num'], html.escape(args.name))
    run(['i3-msg', 'rename workspace "{}" to "{}"'.format(focused['name'], new_name)], check=True)


if __name__ == '__main__':
    main()
