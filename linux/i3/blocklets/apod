set -e

# Open webbrowser with today's APOD image
if [[ "$BLOCK_BUTTON" -eq 1 ]]; then
    xdg-open "https://apod.nasa.gov/apod/ap$(date '+%y%m%d').html" &> /dev/null &
fi

api_key="$(secret-tool lookup server api.nasa.gov kind api-key)"
url="https://api.nasa.gov/planetary/apod?api_key=${api_key}"
exec curl -sS "${url}" | jq -r '
if .code then
  "\(.msg)\n", null | halt_error(1)
elif .error.code then
  "\(.error.message)\n", null | halt_error(1)
else
  "ðŸŒŒ APOD \(now | strftime("%Y-%m-%d")): \(.title)"
end
'


