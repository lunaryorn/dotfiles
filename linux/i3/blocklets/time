import sys
import time
from locale import LC_ALL, setlocale
from datetime import datetime


def print_time():
    sys.stdout.write(datetime.today().strftime('üï∞Ô∏è %H:%M'))
    sys.stdout.write('\n')
    sys.stdout.flush()


def main():
    setlocale(LC_ALL, '')
    print_time()
    while True:
        time.sleep(60)
        print_time()


if __name__ == "__main__":
    try:
        main()
    except KeyboardInterrupt:
        pass
