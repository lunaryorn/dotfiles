import sys
import json
from textwrap import shorten
from subprocess import Popen, PIPE, run


def update_window_title():
    title = run(['xdotool', 'getactivewindow', 'getwindowname'],
                capture_output=True, text=True)
    if title.returncode == 0:
        print(shorten(title.stdout, width=200, placeholder='â€¦'))
    else:
        print("<no active window>")
    sys.stdout.flush()


def main():
    update_window_title()
    events = ['window', 'workspace']
    process = Popen(['i3-msg', '-t', 'subscribe', '-m', json.dumps(events)],
                    bufsize=1, stdout=PIPE, universal_newlines=True)
    for line in process.stdout:
        data = json.loads(line)
        if data['change'] in {'focus', 'title'}:
            update_window_title()


if __name__ == '__main__':
    main()
