import sys
import json
from locale import LC_ALL, setlocale
from datetime import date
from gi.repository import GLib


def print_date():
    today = date.today()
    output = {
        'full_text': today.strftime('ðŸ“… %A, %Y-%m-%d (KW %V)'),
        'short_text': today.strftime('ðŸ“… %m-%d (37)')
    }
    json.dump(output, sys.stdout, ensure_ascii=False, indent=None)
    sys.stdout.write('\n')
    sys.stdout.flush()


def main():
    setlocale(LC_ALL, '')
    print_date()
    # TODO: Refresh when screen is unlocked
    GLib.MainLoop().run()


if __name__ == "__main__":
    try:
        main()
    except KeyboardInterrupt:
        pass
