# i3 config file (v4)
#
# Please see https://i3wm.org/docs/userguide.html for a complete reference!

set $mod Mod4

# Font for window titles. Will also be used by the bar unless a different font
# is used in the bar {} block below.
font pango:Ubuntu 13

# Do not change focus with mouse movements
focus_follows_mouse no
# Don't steal focus; mark windows as urgent if they request activation.
focus_on_window_activation urgent
# Never make Idea windows focused right away; I always open IDEA in the
# background because it takes so long to start.
no_focus [class="jetbrains-idea"]
no_focus [title="IntelliJ IDEA"]

# Colors from the Arc theme
set $background #383C4A
set $foreground	#8F949F
set $selection #5294E2
# 50% of $selection
set $selection_light #a8c9f0
set $warning #F27835

# <class>               <border>        <background>     <text>      <indicator> <child_border>
client.focused          $background     $selection       #ffffff     $selection  $background
client.focused_inactive $background     $selection_light #ffffff     $selection  $background
client.unfocused        $background     $background      $foreground $selection  $background
client.urgent           $background     $warning         #ffffff     $selection  $background
client.placeholder      #000000 #0c0c0c #ffffff #000000   #0c0c0c

client.background       #ffffff

# Gnome settings daemon for Gtk3/Gnome apps
exec --no-startup-id /usr/lib/gsd-xsettings
# Autostart applications, including various tray icons like nm-applet or
# pasystray
exec --no-startup-id dex -a

# Assign random wallpapers to all screens
exec_always --no-startup-id random-wallpaper

# Make tilix guake appear at center instead of top
bindsym $mod+grave exec tilix -q

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# Start a terminal quickly
bindsym $mod+t exec tilix

# Kill focused window
bindsym $mod+Shift+q kill
bindsym $mod+w kill

# Kill window with $mod + middle-click
bindsym --whole-window $mod+button2 kill

# Program launcher
bindsym $mod+space exec "rofi -show-icons -combi-modi 'drun,window,idea:rofi-idea-projects' -modi 'combi#idea:rofi-idea-projects' -show combi"

# File manager
bindsym $mod+e exec xdg-open ~

# Change focus
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

# Move windows
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

# Split in horizontal orientation
bindsym $mod+h split h

# Split in vertical orientation
bindsym $mod+v split v

# Enter fullscreen mode for the focused container
bindsym $mod+Return fullscreen toggle

# Change container layout (stacked, tabbed, toggle split)
bindsym $mod+shift+s layout stacking
bindsym $mod+shift+w layout tabbed
bindsym $mod+shift+t layout toggle split

# Toggle tiling / floating
bindsym $mod+shift+f floating toggle

# Change focus between tiling / floating windows
bindsym $mod+f focus mode_toggle

# Focus the parent container
bindsym $mod+a focus parent

# Focus the child container
bindsym $mod+d focus child

# Focus urgent window
bindsym $mod+u [urgent=latest] focus

# Define names for default workspaces for which we configure key bindings later on.
# we use variables to avoid repeating the names in multiple places.
set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
set $ws10 "10"

# Switch to workspace
bindsym $mod+1 workspace $ws1
bindsym $mod+2 workspace $ws2
bindsym $mod+3 workspace $ws3
bindsym $mod+4 workspace $ws4
bindsym $mod+5 workspace $ws5
bindsym $mod+6 workspace $ws6
bindsym $mod+7 workspace $ws7
bindsym $mod+8 workspace $ws8
bindsym $mod+9 workspace $ws9
bindsym $mod+0 workspace $ws10

# Move focused container to workspace
bindsym $mod+Shift+1 move container to workspace $ws1
bindsym $mod+Shift+2 move container to workspace $ws2
bindsym $mod+Shift+3 move container to workspace $ws3
bindsym $mod+Shift+4 move container to workspace $ws4
bindsym $mod+Shift+5 move container to workspace $ws5
bindsym $mod+Shift+6 move container to workspace $ws6
bindsym $mod+Shift+7 move container to workspace $ws7
bindsym $mod+Shift+8 move container to workspace $ws8
bindsym $mod+Shift+9 move container to workspace $ws9
bindsym $mod+Shift+0 move container to workspace $ws10

# Scratchpad
bindsym $mod+minus scratchpad show
bindsym $mod+Shift+minus move scratchpad

# Workspace mode
set $mode_workspace (←→↑↓) move to output, (p) move to primary
mode "$mode_workspace" {
  bindsym Left move workspace to output left, mode "default"
  bindsym Down move workspace to output down, mode "default"
  bindsym Up move workspace to output up, mode "default"
  bindsym Right move workspace to output right, mode "default"

  bindsym p move workspace to output primary, mode "default"

  bindsym $mod+s mode "default"
  bindsym Return mode "default"
  bindsym Escape mode "default"
}
bindsym $mod+s mode "$mode_workspace"

# System mode
set $mode_system (w) new wallpaper, (c) reconfigure, (l) reload, (s) shutdown, (r) reboot, (e) exit
mode "$mode_system" {
  bindsym e exec --no-startup-id i3-msg exit, mode "default"
  bindsym c reload, mode "default"
  bindsym l restart, mode "default"
  bindsym r exec --no-startup-id systemctl reboot, mode "default"
  bindsym s exec --no-startup-id systemctl poweroff, mode "default"
  bindsym w exec --no-startup-id "random-wallpaper", mode "default"

  bindsym $mod+Delete mode "default"
  bindsym Return mode "default"
  bindsym Escape mode "default"
}

bindsym $mod+Delete mode "$mode_system"

# resize window (you can also use the mouse for that)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.
        bindsym h resize shrink width 10 px or 10 ppt
        bindsym j resize grow height 10 px or 10 ppt
        bindsym k resize shrink height 10 px or 10 ppt
        bindsym l resize grow width 10 px or 10 ppt

        # same bindings, but for the arrow keys
        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym Down resize grow height 10 px or 10 ppt
        bindsym Up resize shrink height 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt

        # back to normal: Enter or Escape or $mod+r
        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym $mod+r mode "default"
}

bindsym $mod+r mode "resize"

# Float windows
for_window [class="jetbrains-toolbox"] floating enable
for_window [class="keepassxc"] floating enable
# Use title and not class, because class also affects actual remote destop
# windows but these should tile like other windows
for_window [title="(?i)Remmina Remote Desktop Client"] floating enable
for_window [class="(?i)gcolor3"] floating enable
# Open messages on second screen
assign [class="Rocket.Chat"] 2

bar {
  status_command i3blocks
  position top
  separator_symbol " "
  tray_output primary
  tray_padding 5px

  colors {
    background $background
    statusline $foreground
    separator $foreground

    focused_workspace  $background $selection  #ffffff
    urgent_workspace   $background $warning    #fffff
    active_workspace   $background $selection_light $foreground
    inactive_workspace $background $background $foreground
  }
}
