import sys
import xml.etree.ElementTree as etree
import subprocess
from pathlib import Path


def latest_config_file():
    candidates = sorted(
        Path.home().glob('.IntelliJIdea*'),
        key=lambda p: p.name,
        reverse=True)
    if candidates:
        return candidates[0] / 'config' / 'options' / 'recentProjects.xml'
    else:
        return None


def read_projects(file):
    document = etree.parse(file)
    projects = [Path(el.attrib['value'].replace('$USER_HOME$', str(Path.home())))
                for el in
                document.findall('.//option[@name="recentPaths"]/list/option')]
    projects.sort(key=lambda p: str(p))
    return projects


def main():
    if len(sys.argv) == 1:
        config_file = latest_config_file()
        projects = read_projects(config_file)
        for project in projects:
            print(str(project).replace(str(Path.home()), '~'))
    else:
        print()
        subprocess.Popen(['idea', str(Path(sys.argv[1]).expanduser())],
                         stdout=subprocess.DEVNULL, stderr=subprocess.STDOUT)


if __name__ == '__main__':
    main()
