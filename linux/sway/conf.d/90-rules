# sway window specific rules

# Never make Idea windows focused right away; I always open IDEA in the
# background because it takes so long to start.
no_focus [class="jetbrains-idea"]
no_focus [title="IntelliJ IDEA"]

# Float windows
for_window [class="(?i)keepassxc"] floating enable
for_window [class="(?i)gcolor3"] floating enable
for_window [class="Evolution-alarm-notify"] floating enable
# Use title and not class for Remmina, because class also affects actual remote
# desktop windows but these should tile like other windows
for_window [title="Remmina Remote-Desktop-Client"] floating enable
# Put messages and notes on fixed screens
assign [class="Rocket.Chat"] 2
assign [class="(?i)zim"] 3
