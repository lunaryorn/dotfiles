# Sway user interface configuration

# Font for window titles. Will also be used by the bar unless a different font
# is used in the bar {} block below.
font pango:Ubuntu 13

# <class>               <border>        <background>        <text>      <indicator> <child_border>
client.focused          $background     $selection          #ffffff     $selection  $background
client.focused_inactive $background     $selection_inactive #ffffff     $selection  $background
client.unfocused        $background     $background         $foreground $selection  $background
client.urgent           $background     $warning              #ffffff     $selection  $background
client.placeholder      #000000 #0c0c0c #ffffff #000000     #0c0c0c
client.background       #ffffff
