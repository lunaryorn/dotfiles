# Sway autostart programs configuration

# Notifications
exec --no-startup-id /usr/bin/mako &
# Settings for Gtk3
exec --no-startup-id /usr/lib/gsd-xsettings &
# Auto-mounting
exec --no-startup-id udiskie -san &
# TODO: Replace xss-lock with wayland alternative
# Lock screen: Use xss-lock to trigger locking on systemd events.  We pass -n to
# keep running in foreground, because xss-lock doesn't want the locker to fork.
# Then we use systemd commands to lock the session.
exec --no-startup-id xss-lock -- lock-screen &
# polkit agent
exec --no-startup-id /usr/lib/mate-polkit/polkit-mate-authentication-agent-1 &
# Wallpaper
# exec --no-startup-id random-wallpaper
# Autostart apps
exec --no-startup-id dex --autostart --environment sway &
