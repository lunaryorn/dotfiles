config_dir="${XDG_CONFIG_HOME:-$HOME/.config}/i3blocks/"
enabled="${config_dir}/home-enabled"
hidden="${config_dir}/home-hidden"

# If the block's hidden don't do anything at all
if [[ -f "$hidden" ]]; then
    exit
fi

# Enable/disable with right click
if [[ -n "$BLOCK_BUTTON" ]]; then
    if [[ -f "${enabled}" ]]; then
        rm -f "${enabled}"
    else
        touch "${enabled}"
    fi
fi

if [[ -f "${enabled}" ]]; then
    exec home -n1
else
    echo 'ðŸš†'
fi
